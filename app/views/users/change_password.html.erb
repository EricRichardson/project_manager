<h1>Update your password</h1>
<%= form_tag change_password_path, method: :patch do %>
  <%= label_tag "Password" %>
  <%= password_field_tag :password %><br>

  <%= label_tag "New password" %>
  <%= password_field_tag :new_password %><br>

  <%= label_tag "New Password Confirmation" %>
  <%= password_field_tag :new_password_confirmation %><br>

  <%= submit_tag "Update password" %>
<% end %>
