<%= form_for @project do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div>
  <div>
    <%= f.label :tags %>
    <%= f.collection_check_boxes(:tag_ids, Tag.order(:title), :id, :title)  %>
  </div>
    <%= f.label :due_date %>
    <%= f.date_select :due_date %>
  </div>
  <%= f.submit %>
<% end %>
