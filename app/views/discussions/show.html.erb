<h1><%= @discussion.title %></h1>
<h2>For: <%= link_to @project.title, project_path(@project) %></h2>
<%= @discussion.description %>
<hr>
<%= link_to "Make a Comment", new_project_discussion_comment_path(@project, @discussion) %>
<hr>
<% @comments.each do |com| %>
  <%= com.body %>
  <% if (can? :manage, com) || (can? :manage, @discussion) || (can? :manage, @project)  %>
    <%= link_to "Edit", edit_project_discussion_comment_path(@project, @discussion, com) %>
    <%= link_to "Delete", project_discussion_comment_path(@project, @discussion, com), method: :delete, data: {confirm: "Are you sure?"} %>
  <% end %>
  <hr>
<% end %>
