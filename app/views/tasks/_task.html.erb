<div id="<%= dom_id(task) %>">
  <strong><%= task.title %></strong><br>
  Due Date: <%= task.duedate %><br>
  Completed: <%= task.completed %><br>
  <% if (can? :manage, task)  %>
    <%= link_to "Edit", edit_project_task_path(@project, task) %>
    <%= link_to "Delete", project_task_path(@project, task), method: :delete, remote: true %>
    <hr>
  <% end %>
</div>
